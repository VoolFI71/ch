                    <div class="waiting-dots">‚óè‚óè‚óè</div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Tab switching
        const tabs = document.querySelectorAll('.tab');
        const tabContents = document.querySelectorAll('.tab-content');

        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                const targetTab = tab.dataset.tab;
                
                tabs.forEach(t => t.classList.remove('active'));
                tab.classList.add('active');
                
                tabContents.forEach(content => {
                    content.style.display = 'none';
                });
                
                document.getElementById(`${targetTab}-tab`).style.display = 'block';
            });
        });

        // Game type toggle
        document.querySelectorAll('.game-type-toggle').forEach(toggle => {
            const options = toggle.querySelectorAll('.type-option');
            options.forEach(option => {
                option.addEventListener('click', (e) => {
                    e.preventDefault();
                    options.forEach(o => o.classList.remove('active'));
                    option.classList.add('active');
                });
            });
        });

        // Mode card click
        document.querySelectorAll('.mode-card').forEach(card => {
            card.addEventListener('click', () => {
                const time = card.dataset.time;
                if (time) {
                    alert(`–ü–æ–∏—Å–∫ –ø–∞—Ä—Ç–∏–∏ ${time}...`);
                }
            });
        });

        // Custom game modal
        const customGameBtn = document.getElementById('customGameBtn');
        const customGameModal = document.getElementById('customGameModal');
        const closeModal = document.getElementById('closeModal');

        customGameBtn.addEventListener('click', () => {
            customGameModal.classList.add('active');
        });

        closeModal.addEventListener('click', () => {
            customGameModal.classList.remove('active');
        });

        customGameModal.addEventListener('click', (e) => {
            if (e.target === customGameModal) {
                customGameModal.classList.remove('active');
            }
        });

        // Friend game modal
        const playWithFriendBtn = document.getElementById('playWithFriendBtn');
        const playWithFriendBtn2 = document.getElementById('playWithFriendBtn2');
        const friendGameModal = document.getElementById('friendGameModal');
        const closeFriendModal = document.getElementById('closeFriendModal');
        const friendSetupScreen = document.getElementById('friendSetupScreen');
        const friendShareScreen = document.getElementById('friendShareScreen');

        playWithFriendBtn.addEventListener('click', () => {
            friendGameModal.classList.add('active');
            friendSetupScreen.style.display = 'block';
            friendShareScreen.classList.remove('active');
        });

        playWithFriendBtn2.addEventListener('click', () => {
            friendGameModal.classList.add('active');
            friendSetupScreen.style.display = 'block';
            friendShareScreen.classList.remove('active');
        });

        closeFriendModal.addEventListener('click', () => {
            friendGameModal.classList.remove('active');
        });

        friendGameModal.addEventListener('click', (e) => {
            if (e.target === friendGameModal) {
                friendGameModal.classList.remove('active');
            }
        });

        // Sliders - Custom game
        const minutesSlider = document.getElementById('minutesSlider');
        const minutesValue = document.getElementById('minutesValue');
        const incrementSlider = document.getElementById('incrementSlider');
        const incrementValue = document.getElementById('incrementValue');

        minutesSlider.addEventListener('input', () => {
            minutesValue.textContent = minutesSlider.value;
        });

        incrementSlider.addEventListener('input', () => {
            incrementValue.textContent = incrementSlider.value;
        });

        // Sliders - Friend game
        const friendMinutesSlider = document.getElementById('friendMinutesSlider');
        const friendMinutesValue = document.getElementById('friendMinutesValue');
        const friendIncrementSlider = document.getElementById('friendIncrementSlider');
        const friendIncrementValue = document.getElementById('friendIncrementValue');

        friendMinutesSlider.addEventListener('input', () => {
            friendMinutesValue.textContent = friendMinutesSlider.value;
        });

        friendIncrementSlider.addEventListener('input', () => {
            friendIncrementValue.textContent = friendIncrementSlider.value;
        });

        // Rating range
        const ratingMin = document.getElementById('ratingMin');
        const ratingMax = document.getElementById('ratingMax');
        const ratingRangeDisplay = document.getElementById('ratingRangeDisplay');
        const baseRating = 2000;

        function updateRatingDisplay() {
            const min = parseInt(ratingMin.value);
            const max = parseInt(ratingMax.value);
            const displayMin = baseRating + min;
            const displayMax = baseRating + max;
            ratingRangeDisplay.textContent = `${displayMin} ‚Äî ${displayMax}`;
        }

        ratingMin.addEventListener('input', updateRatingDisplay);
        ratingMax.addEventListener('input', updateRatingDisplay);

        // Forms
        document.getElementById('createGameForm')?.addEventListener('submit', (e) => {
            e.preventDefault();
            const timeControl = document.getElementById('timeControl').value;
            const gameType = document.querySelector('#createGameForm .type-option.active').dataset.type;
            alert(`–ü–æ–∏—Å–∫ –ø–∞—Ä—Ç–∏–∏: ${timeControl} (${gameType === 'rated' ? '–†–µ–π—Ç–∏–Ω–≥–æ–≤–∞—è' : '–¢–æ–≤–∞—Ä–∏—â–µ—Å–∫–∞—è'})`);
        });

        document.getElementById('customGameForm')?.addEventListener('submit', (e) => {
            e.preventDefault();
            const minutes = minutesSlider.value;
            const increment = incrementSlider.value;
            const gameType = document.querySelector('#customGameForm .type-option.active').dataset.type;
            const minRating = parseInt(ratingMin.value);
            const maxRating = parseInt(ratingMax.value);
            
            alert(`–ü–æ–∏—Å–∫ –ø–∞—Ä—Ç–∏–∏: ${minutes}+${increment}\n–¢–∏–ø: ${gameType === 'rated' ? '–†–µ–π—Ç–∏–Ω–≥–æ–≤–∞—è' : '–¢–æ–≤–∞—Ä–∏—â–µ—Å–∫–∞—è'}\n–†–µ–π—Ç–∏–Ω–≥: ${baseRating + minRating} ‚Äî ${baseRating + maxRating}`);
            customGameModal.classList.remove('active');
        });

        document.getElementById('friendGameForm')?.addEventListener('submit', (e) => {
            e.preventDefault();
            const minutes = friendMinutesSlider.value;
            const increment = friendIncrementSlider.value;
            const gameType = document.querySelector('#friendGameForm .type-option.active').dataset.type;
            
            // Update share screen info
            document.getElementById('shareGameTitle').textContent = `–ü–∞—Ä—Ç–∏—è ${minutes}+${increment}`;
            document.getElementById('shareGameType').textContent = gameType === 'rated' ? '–†–µ–π—Ç–∏–Ω–≥–æ–≤–∞—è –ø–∞—Ä—Ç–∏—è' : '–¢–æ–≤–∞—Ä–∏—â–µ—Å–∫–∞—è –ø–∞—Ä—Ç–∏—è';
            
            // Generate random link
            const randomId = Math.random().toString(36).substring(2, 15);
            document.getElementById('shareLink').value = `https://powerchess.org/challenge/${randomId}`;
            
            // Show share screen
            friendSetupScreen.style.display = 'none';
            friendShareScreen.classList.add('active');
        });

        // Copy link button
        document.getElementById('copyLinkBtn')?.addEventListener('click', () => {
            const linkInput = document.getElementById('shareLink');
            linkInput.select();
            document.execCommand('copy');
            
            const btn = document.getElementById('copyLinkBtn');
            const originalHTML = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-check"></i> –°–∫–æ–ø–∏—Ä–æ–≤–∞–Ω–æ!';
            setTimeout(() => {
                btn.innerHTML = originalHTML;
            }, 2000);
        });

        // Join buttons
        document.querySelectorAll('.btn-join').forEach(btn => {
            btn.addEventListener('click', () => {
                alert('–ü—Ä–∏—Å–æ–µ–¥–∏–Ω–µ–Ω–∏–µ –∫ –ø–∞—Ä—Ç–∏–∏...');
            });
        });

        // TV games
        document.querySelectorAll('.tv-game').forEach(game => {
            game.addEventListener('click', () => {
                alert('–ü—Ä–æ—Å–º–æ—Ç—Ä –ø–∞—Ä—Ç–∏–∏...');
            });
        });
    </script>
</body>
</html>
